<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>
    <class name="com.ashcollege.entities.ClientEntity" table="clients" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="deleted" type="boolean">
            <column name="deleted" default="false"/>
        </property>
        <property name="username" type="string" column="username"/>
        <property name="password" type="string" column="password"/>
        <property name="contactInfo" type="string" column="contact_info"/>
        <property name="fullName" type="string" column="full_name"/>
        <property name="address" type="string" column="address"/>
    </class>

    <class name="com.ashcollege.entities.ProffesionalEntity" table="professional" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="deleted" type="boolean">
            <column name="deleted" default="false"/>
        </property>
        <property name="username" type="string" column="username"/>
        <property name="password" type="string" column="password"/>
        <property name="contactInfo" type="string" column="contact_info"/>
        <property name="fullName" type="string" column="full_name"/>
        <property name="areas" type="string" column="areas"/>
        <property name="plan" type="int" column="plan"/>
    </class>

    <class name="com.ashcollege.entities.CategoryEntity" table="categories" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <property name="deleted" type="boolean">
            <column name="deleted" default="false"/>
        </property>
        <property name="name" type="string" column="name"/>
    </class>

    <class name="com.ashcollege.entities.ProffesionalCategoryEntity" table="professionals_categories" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="proffesionalEntity" column="professional_id"
                     class="com.ashcollege.entities.ProffesionalEntity"/>
        <many-to-one name="categoryEntity" column="category_id"
                     class="com.ashcollege.entities.CategoryEntity"/>
    </class>

    <class name="com.ashcollege.entities.PostEntity" table="posts" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="clientEntity" column="client_id"
                     class="com.ashcollege.entities.ClientEntity"/>
        <property name="text" type="string" column="text"/>
        <many-to-one name="categoryEntity" column="category_id"
                     class="com.ashcollege.entities.CategoryEntity"/>

    </class>

    <class name="com.ashcollege.entities.BidEntity" table="bids" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="proffesionalEntity" column="proffessional_id"
                     class="com.ashcollege.entities.ProffesionalEntity"/>
        <many-to-one name="postEntity" column="post_id"
                     class="com.ashcollege.entities.PostEntity"/>
        <property name="status" type="int" column="status"/>
        <property name="proposedPrice" type="float" column="proposed_price"/>
    </class>


    <class name="com.ashcollege.entities.MessageEntity" table="messages" lazy="false">
        <id name="id" type="int" column="id">
            <generator class="native"/>
        </id>
        <many-to-one name="bidEntity" column="bid_id"
                     class="com.ashcollege.entities.BidEntity"/>
        <property name="content" type="string" column="content"/>
        <property name="client" type="boolean" column="client"/>
    </class>


</hibernate-mapping>
